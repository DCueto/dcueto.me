<button class="burger-menu" id="burger-menu">
  <div class="burger-menu__bar"></div>
  <div class="burger-menu__bar"></div>
  <div class="burger-menu__bar"></div>
</button>


<style lang="scss">

  @mixin light-theme {
    --color-background__bars: var(--color-black-oil);
  }

  @mixin dark-theme {
    --color-background__bars: var(--color-black-oil);
  }

  :root{
    @include light-theme;
  }

  :root.dark{
    @include dark-theme;
  }

  @media ( prefers-color-scheme: dark ) {
    :root{
      @include light-theme;
    }

    :root.dark{
      @include dark-theme;
    }
  }

  .burger-menu{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 43px;
    height: 22px;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.2s linear;
    border: none;
    background-color: transparent;
    transform: scale(1);

    &:hover{
      transform: scale(0.9);
    }

    .burger-menu__bar{
      width: 100%;
      height: 2px;
      background-color: var(--color-background__bars);
      // border-radius: 0.25rem;
    }
  }

</style>