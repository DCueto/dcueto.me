---
import CV from '/public/docs/CV_Daniel-Cueto_en.pdf';
---

<section class="social-buttons wrap">
  <button class="social-button linkedin">
    <a class="social-button-content" href="https://www.linkedin.com/in/dcuetome/" target="_blank">
      <span class="social-button-text">LinkedIn</span>
      <i class="social-button-arrow"></i>
    </a>
  </button>
  <button class="social-button web">
    <a class="social-button-content" href={ CV } target="_blank" download>
      <span class="social-button-text">Download CV</span>
      <i class="social-button-arrow"></i>
    </a>
  </button>
  <button class="social-button github">
    <a class="social-button-content" href="https://github.com/DCueto" target="_blank">
      <span class="social-button-text">Github</span>
      <i class="social-button-arrow"></i>
    </a>
  </button>
  <button class="social-button x">
    <a class="social-button-content" href="https://x.com/DCuetoMe" target="_blank">
      <span class="social-button-text">X</span>
      <i class="social-button-arrow"></i>
    </a>
  </button>
</section>


<style lang="scss">

  @mixin light-theme {
    --color-background__social-buttons: var(--color-gray-light3);
    --color-background__social-button: blueviolet;
    --color-text__social-button: white;
    --color-background__social-button: transparent;
    --color-background__social-button--hover: transparent;
    --color-background__social-button-content: blue;
    --color-background__social-button--shadow: black;
    --color-background__social-button--linkedin: #0B65C2;
    --color-background__social-button--web: #5B5D88;
    --color-background__social-button--github: #222429;
    --color-background__social-button--x: #0C0C0C;
    --color-text__social-button__span: white;
  }

  @mixin dark-theme {
    --color-background__social-buttons: var(--color-gray-dark);
    --color-background__social-button: blueviolet;
    --color-text__social-button: white;
    --color-background__social-button: transparent;
    --color-background__social-button--hover: transparent;
    --color-background__social-button-content: blue;
    --color-background__social-button--shadow: black;
    --color-background__social-button--linkedin: #0B65C2;
    --color-background__social-button--web: #5B5D88;
    --color-background__social-button--github: #222429;
    --color-background__social-button--x: #0C0C0C;
    --color-text__social-button__span: white;
  }

  :root{
    @include light-theme;
  }

  :root.dark{
    @include dark-theme;
  }

  @media ( prefers-color-scheme: dark ) {
    :root{
      @include light-theme;
    }

    :root.dark{
      @include dark-theme;
    }
  }

  .social-buttons{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    grid-template-rows: 4.375rem 4.375rem 4.375rem;
    gap: 1.5625rem;
    background-color: var(--color-background__social-buttons);
    padding-top: 2.5rem;
    padding-bottom: 2.5rem;
  }

  .social-button{
    background-color: var(--color-background__social-button);
    border: none;
    padding: 0;
    color: var(--color-text__social-button);
    text-align: left;
    position: relative;
    z-index: 4;
    background-color: var(--color-background__social-button);
    cursor: pointer;
  }

  .social-button:hover{
    background-color: var(--color-background__social-button--hover);
  }

  .social-button .social-button-content{
    display: block;
    width: 100%;
    height: 100%;
    background-color: var(--color-background__social-button-content);
    transition: transform .2s ease;
    padding: 0.9375rem;
  }

  .social-button .social-button-content:hover{
    transform: translate(0.625rem, 0.625rem);
    text-decoration: none;
  }

  .social-button::after{
    content: '';
    width: 100%;
    height: 100%;
    background-color: var(--color-background__social-button--shadow);
    position: absolute;
    top: 0.625rem;
    left: 0.625rem;
    z-index: -2;
  }

  .social-button.linkedin{
    grid-column-start: 1;
    grid-column-end: 5;
    grid-row-start: 1;
    grid-row-end: 3;
  }

  .social-button.linkedin .social-button-content{
    background-color: var(--color-background__social-button--linkedin);
  }

  .social-button.web{
    grid-column-start: 5;
    grid-column-end: 6;
    grid-row-start: 1;
    grid-row-end: 5;
  }

  .social-button.web .social-button-content{
    background-color: var(--color-background__social-button--web);
  }

  .social-button.github{
    grid-column-start: 1;
    grid-column-end: 3;
    grid-row-start: 3;
    grid-row-end: 5;
  }

  .social-button.github .social-button-content{
    background-color: var(--color-background__social-button--github);
  }

  .social-button.x{
    grid-column-start: 3;
    grid-column-end: 5;
    grid-row-start: 3;
    grid-row-end: 5;
  }

  .social-button.x .social-button-content{
    background-color: var(--color-background__social-button--x);
  }

  .social-button span{
    color: var(--color-text__social-button__span);
    font-weight: bold;
    font-size: 1.5rem;
  }

  @media screen and ( width <= 750px ) {
    .social-buttons{
      grid-template-rows: 4.375rem 4.375rem 4.375rem 4.375rem;
    }

    .social-button.web{
      grid-column: 1 / 6;
      grid-row-start: 4;
      grid-row-end: 5;
    }

    .social-button.linkedin{
      grid-column: 1 / 6;
    }

    .social-button.github{
      grid-column: 1 / 4;
      grid-row-start: 3;
      grid-row-end: 4;
    }

    .social-button.x{
      grid-column: 4 / 6;
      grid-row-start: 3;
      grid-row-end: 4;
    }
  }
</style>