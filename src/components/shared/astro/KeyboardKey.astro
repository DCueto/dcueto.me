---
type Props = {
  iconClass?: string,
  key: string,
}

const { iconClass, key } = Astro.props;
---

<i class=`${iconClass} key`>{ key }</i>

<style lang="scss">
  @mixin light-theme {
    --color-key-background: black;
    --color-key-text: white;
  }

  @mixin dark-theme {
    --color-key-background: black;
    --color-key-text: white;
  }

  :root{
    @include light-theme;
  }

  :root.dark{
    @include dark-theme;
  }

  @media ( prefers-color-scheme: dark ) {
    :root{
      @include light-theme;
    }

    :root.dark{
      @include dark-theme;
    }
  }

  .key{
    font-family: 'Oxygen Mono';
    font-size: 1rem;
    padding: 0.125rem 0.375rem;
    background-color: var(--color-key-background);
    color: var(--color-key-text);
    border-radius: 0.3125rem;
  }
</style>