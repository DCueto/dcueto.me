    justify-content: center;
    align-items: center;
    gap: 30px;
  }

  div > section i{
    width: 15px;
    height: 15px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, .4);
    transform: scale(1);
    cursor: pointer;
    transition: background-color .1s, transform .1s;
  }

  div > section i:hover{
    background-color: rgba(255, 255, 255, 1);
    transform: scale(1.4);
  }

  @media screen and (max-width: 900px){
    .carousel-simple > div{
      align-items: center;

    }

    .carousel-simple > div > div{
      text-align: center;
