<div id="progressPageScrolled"></div>

<style lang="scss">
  @mixin light-theme {
    --color-background__progress-bar: var(--color-yellow-dark);
  }

  @mixin dark-theme {
    --color-background__progress-bar: var(--color-yellow-js);
  }

  :root{
    @include light-theme;
  }

  :root.dark{
    @include dark-theme;
  }

  @media ( prefers-color-scheme: dark ) {
    :root{
      @include light-theme;
    }

    :root.dark{
      @include dark-theme;
    }
  }

  @keyframes grow-progress {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }

  html{
    scroll-timeline: --page-scroll block;
  }

  #progressPageScrolled {
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    height: 1rem;
    background-color: var(--color-background__progress-bar);
    z-index: 1000;
    transform-origin: 0% 50%;
    animation: grow-progress auto linear;
    animation-timeline: --page-scroll;
  }
</style>